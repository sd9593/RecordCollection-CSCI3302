<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!-- this page to make background the same -->
    <link rel="stylesheet" href="~/RecordCollectionUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-#44344f box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" id="navigation-bar" asp-area="" asp-page="/Index"><i class="bi bi-vinyl"></i> Record Collection <i class="bi bi-vinyl"></i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" id="navigation-bar-entry-one" asp-area="" asp-page="/Artists/Index">Artists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navigation-bar-entry-two" asp-area="" asp-page="/Albums/Index">Albums</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navigation-bar-entry-three" asp-area="" asp-page="/Genres/Index">Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navigation-bar-entry-three" asp-area="" asp-page="/Account/Logout">Log Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <!--Bottom of page-->
            Created by Aubrey Blake, Anna Cao, and Sydney Drury
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
