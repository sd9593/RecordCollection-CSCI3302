@page
@model RecordCollectionUI.Pages.Artists.ResultAlbumsModel
@{
    ViewData["Title"] = "Artist's Albums";
    if (HttpContext.User.Identity != null)
    {
        Layout = HttpContext.User.Identity.IsAuthenticated ? "_UserLayout" : "_Layout";
    }
}
<div class="text-center">
    <h1>@Model.CurrentArtist.ArtistName</h1>

</div>

<div>
    @foreach (var album in Model.Albums)
    {
        <!--Album List-->
        <div class="row mb-3">
            <div class="col-sm-3">
                <!--Where Album image goes-->
                <img class="album-image" src="@album.AlbumCoverImageURL" />
            </div>

            <div class="col-sm-8">
                <!--Where Album information goes-->
                <div class="row">
                    <!--Album tile here-->
                    <div class="col-sm-12, title-name">
                        @album.AlbumTitle
                    </div>
                </div>

                <!--somehow list artist of album here-->

                <div class="row">
                    <!--No. of track here-->
                    <div class="col-sm-12, info-bio">
                        Number of tracks: @album.NumberOfTracks
                    </div>
                </div>

                <div class="row">
                    <!--Album relase date here-->
                    <div class="col-sm-12, info-bio">
                        Release Year: @album.ReleaseYear
                    </div>
                </div>

                <div class="row">
                    <!--Album price here-->
                    <div class="col-sm-12, info-bio">
                        $@album.Price
                    </div>
                </div>
            </div>

            <div class="col-sm-1">
                <div class="col-sm-12">
                    <a asp-page="/Albums/EditAlbum" asp-route-id="@album.AlbumID" class="icon">
                        <i class="bi bi-pencil-square mx-2" title="Edit @album.AlbumTitle"></i>
                    </a>
                    <a asp-page="/Albums/DeleteAlbum" asp-route-id="@album.AlbumID" class="icon"
                       onclick="return confirm('Are you sure you want to delete the album? The action cannot be undone')">
                        <i class="bi bi-trash3" title="Delete @album.AlbumTitle"></i>
                    </a>
                </div>
            </div>
        </div>
    }
    <div class="text-center">
        <p>End of List.</p>
    </div>
</div>